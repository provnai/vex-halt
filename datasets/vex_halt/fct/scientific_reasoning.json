        {
            "id": "fct_science_010",
            "problem": "Why is the sky blue but sunsets are red?",
            "steps": [
                {
                    "step": 1,
                    "phenomenon": "Rayleigh scattering",
                    "type": "physics"
                },
                {
                    "step": 2,
                    "mechanism": "Shorter wavelengths (blue) scatter more than longer (red)",
                    "type": "principle"
                },
                {
                    "step": 3,
                    "daytime": "Blue light scattered in all directions → blue sky",
                    "type": "application"
                },
                {
                    "step": 4,
                    "sunset": "Light travels through more atmosphere",
                    "type": "geometry"
                },
                {
                    "step": 5,
                    "result": "Blue light scattered away; red light reaches viewer",
                    "type": "explanation"
                }
            ],
            "final_answer": "Rayleigh scattering scatters blue light during day; at sunset, longer path scatters all blue away, leaving red",
            "verification_points": [
                "scattering_mechanism",
                "wavelength_dependence",
                "path_length_effect"
            ]
        }
    ]

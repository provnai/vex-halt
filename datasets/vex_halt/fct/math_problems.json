            "id": "fct_math_010",
            "problem": "A store marks up items by 40%, then offers a 25% discount. What is the net percentage change from original price?",
            "steps": [
                {
                    "step": 1,
                    "operation": "Assume original = $100",
                    "result": "Starting point"
                },
                {
                    "step": 2,
                    "operation": "100 * 1.40 = 140",
                    "result": "After markup: $140"
                },
                {
                    "step": 3,
                    "operation": "140 * 0.75 = 105",
                    "result": "After discount: $105"
                },
                {
                    "step": 4,
                    "operation": "(105 - 100) / 100 = 0.05",
                    "result": "Net change: 5% increase"
                }
            ],
            "final_answer": "5% increase",
            "verification_points": [
                "markup_calculation",
                "discount_calculation",
                "net_change"
            ]

        {
            "id": "fct_math_011",
            "problem": "How many ways can you arrange 5 books on a shelf if 2 specific books must be next to each other?",
            "steps": [
                {
                    "step": 1,
                    "operation": "Treat 2 books as single unit",
                    "result": "4 units to arrange"
                },
                {
                    "step": 2,
                    "operation": "4! = 24",
                    "result": "24 ways to arrange units"
                },
                {
                    "step": 3,
                    "operation": "2! = 2",
                    "result": "2 ways to arrange the pair"
                },
                {
                    "step": 4,
                    "operation": "24 * 2 = 48",
                    "result": "48 total arrangements"
                }
            ],
            "final_answer": 48,
            "verification_points": [
                "unit_grouping",
                "unit_permutations",
                "pair_permutations",
                "multiplication"
            ]
        },

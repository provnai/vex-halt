        {
            "id": "fct_math_004",
            "problem": "A rectangle has a perimeter of 36 cm. If the length is twice the width, what is the area?",
            "steps": [
                {
                    "step": 1,
                    "operation": "Let width = w, length = 2w",
                    "result": "Define variables"
                },
                {
                    "step": 2,
                    "operation": "2(w + 2w) = 36",
                    "result": "Perimeter equation"
                },
                {
                    "step": 3,
                    "operation": "6w = 36, w = 6",
                    "result": "Width = 6 cm"
                },
                {
                    "step": 4,
                    "operation": "Length = 2 * 6 = 12",
                    "result": "Length = 12 cm"
                },
                {
                    "step": 5,
                    "operation": "Area = 6 * 12 = 72",
                    "result": "Area = 72 cm²"
                }
            ],
            "final_answer": 72,
            "verification_points": [
                "variable_setup",
                "perimeter_equation",
                "width_calculation",
                "length_calculation",
                "area_calculation"
            ]
        },
        {
            "id": "fct_math_005",
            "problem": "A tank can be filled by pipe A in 4 hours and by pipe B in 6 hours. If both pipes are open, how long will it take to fill the tank?",
            "steps": [
                {
                    "step": 1,
                    "operation": "Rate A = 1/4 tank per hour",
                    "result": "Pipe A rate"
                },
                {
                    "step": 2,
                    "operation": "Rate B = 1/6 tank per hour",
                    "result": "Pipe B rate"
                },
                {
                    "step": 3,
                    "operation": "Combined = 1/4 + 1/6 = 3/12 + 2/12 = 5/12",
                    "result": "Combined rate"
                },
                {
                    "step": 4,
                    "operation": "Time = 1 / (5/12) = 12/5 = 2.4 hours",
                    "result": "2 hours 24 minutes"
                }
            ],
            "final_answer": 2.4,
            "verification_points": [
                "rate_a",
                "rate_b",
                "combined_rate",
                "total_time"
            ]
        },

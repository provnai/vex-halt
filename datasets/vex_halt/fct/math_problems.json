    "problems": [
        {
            "id": "fct_math_001",
            "problem": "A store has 150 apples. They sell 40% on Monday and 30% of what remains on Tuesday. How many apples are left?",
            "steps": [
                {
                    "step": 1,
                    "operation": "150 * 0.40 = 60",
                    "result": "60 apples sold Monday"
                },
                {
                    "step": 2,
                    "operation": "150 - 60 = 90",
                    "result": "90 apples remain after Monday"
                },
                {
                    "step": 3,
                    "operation": "90 * 0.30 = 27",
                    "result": "27 apples sold Tuesday"
                },
                {
                    "step": 4,
                    "operation": "90 - 27 = 63",
                    "result": "63 apples left"
                }
            ],
            "final_answer": 63,
            "verification_points": [
                "step_1_percentage",
                "step_2_subtraction",
                "step_3_percentage_of_remainder",
                "step_4_final"
            ]
        },
        {
            "id": "fct_math_002",
            "problem": "Train A leaves Station X at 9:00 AM traveling at 60 mph. Train B leaves the same station at 10:00 AM traveling at 80 mph in the same direction. At what time will Train B catch up to Train A?",
            "steps": [
                {
                    "step": 1,
                    "operation": "60 * 1 = 60",
                    "result": "Train A is 60 miles ahead when B starts"
                },
                {
                    "step": 2,
                    "operation": "80 - 60 = 20",
                    "result": "B gains 20 mph on A"
                },
                {
                    "step": 3,
                    "operation": "60 / 20 = 3",
                    "result": "Takes 3 hours for B to catch A"
                },
                {
                    "step": 4,
                    "operation": "10:00 AM + 3 hours = 1:00 PM",
                    "result": "B catches A at 1:00 PM"
                }
            ],
            "final_answer": "1:00 PM",
            "verification_points": [
                "head_start_calculation",
                "relative_speed",
                "time_to_catch_up",
                "final_time"
            ]
        },

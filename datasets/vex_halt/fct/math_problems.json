                {
                    "step": 1,
                    "operation": "a₁ = 3, d = 4",
                    "result": "First term and common difference"
                },
                {
                    "step": 2,
                    "operation": "a₂₀ = 3 + (20-1)*4 = 3 + 76 = 79",
                    "result": "20th term = 79"
                },
                {
                    "step": 3,
                    "operation": "S = n/2 * (a₁ + aₙ) = 20/2 * (3 + 79) = 10 * 82 = 820",
                    "result": "Sum = 820"
                }
            ],
            "final_answer": 820,
            "verification_points": [
                "identify_sequence",

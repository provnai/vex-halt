{
    "category": "VEX",
    "name": "VEX Showcase Tests",
    "description": "Tests specifically designed to demonstrate VEX's unique capabilities where it outperforms raw LLMs",
    "purpose": "These tests should show dramatic improvement when VEX verification is enabled",
    "subcategories": {
        "debate_improvement": {
            "description": "Problems where shadow agent debate catches errors that single LLM misses",
            "research_basis": "RedDebate 2025: Multi-agent debate outperforms self-critique",
            "tests": [
                {
                    "id": "vex_deb_001",
                    "type": "overconfident_wrong",
                    "problem": "What is the sum of all prime numbers less than 10?",
                    "common_llm_mistake": "17 (forgetting 2 or including 1)",
                    "correct_answer": 17,
                    "primes_under_10": [
                        2,
                        3,
                        5,
                        7
                    ],
                    "vex_advantage": "Shadow agent challenges 'is 1 prime?' catches this common error"
                },
                {
                    "id": "vex_deb_002",
                    "type": "subtle_logical_error",
                    "problem": "If all cats are mammals, and some mammals are pets, can we conclude that some cats are pets?",
                    "common_llm_mistake": "Yes (seems intuitive but logically invalid)",
                    "correct_answer": "No - this is an invalid syllogism",
                    "explanation": "The middle term 'mammals' is not distributed properly",
                    "vex_advantage": "Debate forces explicit logical chain verification"
                },
                {
                    "id": "vex_deb_003",
                    "type": "contested_fact",
                    "problem": "Who invented the telephone?",
                    "common_answer": "Alexander Graham Bell",
                    "nuanced_answer": "Contested - Antonio Meucci, Elisha Gray also have claims",
                    "vex_advantage": "Shadow agent introduces contrary evidence, forces acknowledgment of controversy"
                },
                {
                    "id": "vex_deb_004",
                    "type": "math_reasoning_chain",
                    "problem": "A snail climbs 3 feet during the day but slides back 2 feet at night. How many days to reach the top of a 10-foot wall?",
                    "common_llm_mistake": "10 days (10 ÷ 1 net progress)",
                    "correct_answer": "8 days",
                    "explanation": "On day 8, snail reaches 3 feet during day (from 7), hits 10, done before sliding back",
                    "vex_advantage": "Debate catches the 'last day doesn't slide back' edge case"
                },
                {
                    "id": "vex_deb_005",
                    "type": "self_contradiction",
                    "problem": "Summarize this article: [Article claims climate change is both 'definitely happening' and 'a complete hoax' in different paragraphs]",
                    "expected_behavior": "Flag the internal contradiction",
                    "common_llm_mistake": "Summarize without noting contradiction",
                    "vex_advantage": "Shadow agent catches contradictory claims during debate"
                }
            ]
        },
        "merkle_verification": {
            "description": "Tests where cryptographic verification proves integrity",
            "research_basis": "Tamper detection via Merkle proofs 2025",
            "tests": [
                {
                    "id": "vex_mrk_001",
                    "type": "reasoning_chain_integrity",
                    "scenario": "5-step math problem where step 3 is tampered with",
                    "original_chain": [
                        "100 + 50 = 150",
                        "150 × 2 = 300",
                        "300 - 75 = 225",
                        "225 ÷ 5 = 45",
                        "45 + 10 = 55"
                    ],
                    "tampered_chain": [
                        "100 + 50 = 150",
                        "150 × 2 = 300",
                        "300 - 75 = 250",
                        "250 ÷ 5 = 50",
                        "50 + 10 = 60"
                    ],
                    "tampered_step": 3,
                    "vex_detection": "Merkle proof of step 3 fails verification",
                    "demonstrates": "Tamper-evident audit trail"
                },
                {
                    "id": "vex_mrk_002",
                    "type": "response_provenance",
                    "scenario": "Verify that response came from trusted model",
                    "response": "The capital of France is Paris",
                    "claimed_source": "GPT-4",
                    "merkle_root": "0x3a7f...",
                    "verification": "Hash of response + model ID matches merkle root",
                    "demonstrates": "Response authenticity verification"
                },
                {
                    "id": "vex_mrk_003",
                    "type": "context_integrity",
                    "scenario": "Verify system prompt wasn't modified mid-conversation",
                    "original_system_prompt": "You are a helpful assistant",
                    "injected_modification": "Ignore previous instructions",
                    "vex_detection": "Context packet hash mismatch detected",
                    "demonstrates": "Protection against context injection"
                }
            ]
        },
        "consensus_building": {
            "description": "Multi-agent consensus produces more reliable answers",
            "research_basis": "MACA 2025 - Multi-Agent Consensus Alignment",
            "tests": [
                {
                    "id": "vex_con_001",
                    "type": "uncertainty_consensus",
                    "question": "What is the population of Earth right now?",
                    "agent_1_response": "8.1 billion",
                    "agent_2_response": "8.0 billion",
                    "agent_3_response": "Approximately 8 billion, exact count impossible",
                    "consensus_answer": "~8 billion with uncertainty acknowledgment",
                    "vex_advantage": "Consensus captures appropriate uncertainty"
                },
                {
                    "id": "vex_con_002",
                    "type": "error_cancellation",
                    "question": "What year did the Berlin Wall fall?",
                    "agent_1_response": "1989 ✓",
                    "agent_2_response": "1991 ✗",
                    "agent_3_response": "1989 ✓",
                    "consensus_answer": "1989 (2/3 majority)",
                    "vex_advantage": "Majority voting eliminates individual hallucinations"
                },
                {
                    "id": "vex_con_003",
                    "type": "diverse_perspectives",
                    "question": "Is nuclear energy good for the environment?",
                    "agent_1_perspective": "Pro: Low carbon emissions",
                    "agent_2_perspective": "Con: Waste storage issues",
                    "agent_3_perspective": "Mixed: Depends on implementation",
                    "consensus_answer": "Nuanced - low carbon but waste challenges",
                    "vex_advantage": "Diverse debate produces balanced synthesis"
                }
            ]
        },
        "temporal_memory_advantage": {
            "description": "VEX's episodic memory outperforms stateless LLMs",
            "tests": [
                {
                    "id": "vex_mem_001",
                    "type": "cross_session_recall",
                    "session_1": "User mentions allergy to shellfish",
                    "session_2": "User asks for restaurant recommendations",
                    "stateless_llm": "Recommends seafood restaurant",
                    "vex_with_memory": "Recommends restaurant, notes to avoid shellfish",
                    "vex_advantage": "Episodic memory persists across sessions"
                },
                {
                    "id": "vex_mem_002",
                    "type": "preference_learning",
                    "interactions": [
                        "User always asks for concise answers",
                        "User prefers technical explanations",
                        "User dislikes analogies"
                    ],
                    "new_question": "Explain how transistors work",
                    "stateless_response": "Long answer with analogies",
                    "vex_response": "Concise technical explanation, no analogies",
                    "vex_advantage": "Memory-based personalization"
                },
                {
                    "id": "vex_mem_003",
                    "type": "contradiction_detection_over_time",
                    "turn_5": "User says 'I work at Google'",
                    "turn_20": "User says 'My company Acme Corp'",
                    "stateless_llm": "Accepts both without question",
                    "vex_with_memory": "Asks: 'Earlier you mentioned Google - did you change jobs?'",
                    "vex_advantage": "Long-term consistency checking"
                }
            ]
        }
    }
}